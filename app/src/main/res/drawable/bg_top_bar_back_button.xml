<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="#30ABE8" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>

    <item android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="#40FFFFFF" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>

    <item>
        <inset android:insetBottom="3dp">
            <shape android:shape="oval">
                <solid android:color="#30ABE8" />
                <size
                    android:width="24dp"
                    android:height="21dp" />
            </shape>
        </inset>
    </item>

</layer-list>