<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style for the statistics card title TextView -->
    <style name="StatisticsCardTitle" parent="Label.XSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/shade_tertiary</item>
    </style>

    <!-- Style for the statistics card value TextView -->
    <style name="StatisticsCardValue" parent="Label.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">@color/shade_primary</item>
    </style>

</resources>
