<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Qurio" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:disabledAlpha">1.0</item>

        <item name="android:textViewStyle">@style/GlobalTextViewStyle</item>
    </style>

    <style name="Theme.Qurio" parent="Base.Theme.Qurio" />



   <!--button region-->

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/primary_button_background</item>
        <item name="android:textColor">@color/primary_button_text_color</item>
        <item name="android:textAppearance">@style/Label.Medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:disabledAlpha">1.0</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/secondary_button_background</item>
        <item name="android:textColor">@color/secondary_button_text_color</item>
        <item name="android:textAppearance">@style/Label.Medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:disabledAlpha">1.0</item>
    </style>

    <style name="TextButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/secondary_button_text_color</item>
        <item name="android:textAppearance">@style/Label.Medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LargePlayNowButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineHeight">22dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:fontFamily">@font/fredoka_one_regular</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:background">@drawable/large_play_now_background</item>
    </style>
    <style name="SmallPlayNowButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/fredoka_one_regular</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:background">@drawable/small_play_now_background</item>
    </style>
    <!--end region-->


</resources>