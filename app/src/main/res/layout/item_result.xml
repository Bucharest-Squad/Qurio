<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/rainbow"
        android:layout_width="344dp"
        android:layout_height="178dp"
        android:src="@drawable/result_rainbow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="344dp"
        android:layout_height="68dp"
        android:layout_marginTop="110dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/result_ribbon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_result_ribbon" />

        <TextView
            style="@style/Headline.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:shadowColor="#1980B2"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="Great Job"
            android:textColor="@color/on_primary"

            />
    </FrameLayout>

    <ImageView
        android:id="@+id/first_result_star"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/ic_result_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/second_result_star"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_result_star"
        app:layout_constraintStart_toEndOf="@+id/first_result_star"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/third_result_star"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/ic_result_star"
        app:layout_constraintStart_toEndOf="@+id/second_result_star"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/Title.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reward"
        android:paddingTop="4dp"
        android:textColor="@color/shade_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rainbow" />



</androidx.constraintlayout.widget.ConstraintLayout>