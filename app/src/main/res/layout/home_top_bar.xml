<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface">

    <ImageView
        android:id="@+id/image_selected_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/character"
        android:src="@drawable/rika"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_qurio_explorer"
        style="@style/Body.Small"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/shade_secondary"
        app:layout_constraintTop_toTopOf="@id/image_selected_character"
        app:layout_constraintBottom_toTopOf="@id/text_character_name"
        app:layout_constraintStart_toEndOf="@id/image_selected_character"/>

    <TextView
        android:id="@+id/text_character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rika"
        style="@style/Label.Medium"
        android:textColor="@color/shade_primary"
        app:layout_constraintStart_toStartOf="@id/text_welcome"
        app:layout_constraintTop_toBottomOf="@+id/text_welcome"
        app:layout_constraintBottom_toBottomOf="@id/image_selected_character"
        app:layout_constraintStart_toEndOf="@id/image_selected_character"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/settings"
        android:src="@drawable/ic_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>