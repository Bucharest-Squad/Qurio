<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="144dp"
    android:layout_height="76dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="66dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@drawable/statstics_points">
    <TextView
        android:id="@+id/points"
        style="@style/Label.XSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="17dp"
        android:text="@string/statstics_points_card_title"
        android:textColor="@color/shade_tertiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="points" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/points">

        <ImageView
            android:id="@+id/ic_lives"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/statstics_points_card_icon_description"
            android:src="@drawable/ic_points"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="21dp" />

        <TextView
            style="@style/Label.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            tools:text="5,400"
            android:textColor="@color/shade_primary"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="20dp" />

    </LinearLayout>

    <include layout="@layout/indicator"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/ic_crown_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_crown"
        android:contentDescription="@string/statstics_points_card_crown_icon_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>