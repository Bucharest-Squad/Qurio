<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="96dp"
    android:layout_height="50dp"
    android:background="@drawable/statistics_lives_background">


    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_plus"
        android:padding="3dp"
        android:background="@drawable/circle_button_background"
        android:contentDescription="@string/statistics_lives_card_upgrade_icon_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
        android:id="@+id/lives"
        style="@style/StatisticsCardTitle"
        android:paddingTop="7dp"
        android:text="@string/statistics_lives_card_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_lives"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="-5dp"
        android:contentDescription="@string/statistics_lives_card_lives_icon_description"
        android:src="@drawable/ic_lives"
        app:layout_constraintStart_toStartOf="@+id/lives"
        app:layout_constraintTop_toBottomOf="@+id/lives" />

        <TextView
            android:id="@+id/lives_count"
            style="@style/StatisticsCardValue"
            android:layout_marginVertical="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/ic_lives"
            app:layout_constraintStart_toEndOf="@+id/ic_lives"
            app:layout_constraintTop_toBottomOf="@+id/points"
            tools:text="4" />

    <include layout="@layout/indicator" />

    <View
        android:layout_width="48dp"
        android:layout_height="5dp"
        android:background="@drawable/indicator_blue_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>